@{

    Layout = null;
}
<h1>Search Customer</h1>
<div class="container" ng-controller="SimpleController">
    Name: <input type="text" ng-model="nameSearch" />

    <ul>
        <li ng-repeat="cust in customers | filter:nameSearch | orderBy:'name'">
            {{cust.name}} - {{cust.city}}
        </li>
    </ul>
</div>